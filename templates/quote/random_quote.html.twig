{% extends 'base.html.twig' %}

{% block title %}Hello QuoteController!{% endblock %}

{% block body %}


    <div style="display: flex;justify-content: center;flex-direction: column;align-items: center;gap: 20em;width: 100%">
        <h1 class="h1">Citation Aléatoire</h1>

            {% if quote is not empty %}
                <div style="display: flex;flex-direction: column;gap: 5px;width: 100%;justify-content: center;align-items: center;border-top: solid black;border-bottom: solid black;padding: 5%;font-size: 200%">
                    <p class="" style="margin:0">{{ quote.content }}</p>
                    <p class="text-muted"> — {{ quote.meta }}</p>
                </div>
            {% else %}
                <H3> Aucun résultat trouvé </H3>
            {% endif %}
    </div>
{% endblock %}
